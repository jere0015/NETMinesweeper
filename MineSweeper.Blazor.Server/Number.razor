
@switch(Count)
{
    case 0:
        textStyle = "display: none";
        break;
    case 1:
        textStyle = "color: blue";
        break;
    case 2:
        textStyle = "color: green";
        break;
    case 3:
        textStyle = "color: red";
        break;
    default:
        textStyle = "color: black";
        break;
}

<div style="justify-content:center; width:100%; height:100%; @(textStyle)"><div>@Count</div></div>

@code {
    string textStyle = "none";

    [Parameter]
    public int Count { get; set; }
}
